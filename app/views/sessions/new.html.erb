<div class="min-h-screen flex items-center justify-center -mt-6">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-extrabold text-gray-900">AgroField</h1>
      <h2 class="mt-2 text-center text-xl text-gray-600">Sign in to your account</h2>
    </div>
    <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", 
              value: params[:email_address],
              class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
        </div>
        <div>
          <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72,
              class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
        </div>
      </div>
      <div>
        <%= form.submit "Sign in", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 cursor-pointer" %>
      </div>
      <div class="flex items-center justify-between text-sm">
        <%= link_to "Forgot password?", new_password_path, class: "font-medium text-green-600 hover:text-green-500" %>
        <%= link_to "Create account", new_registration_path, class: "font-medium text-green-600 hover:text-green-500" %>
      </div>
    <% end %>
  </div>
</div>
