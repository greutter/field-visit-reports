<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
    <div>
      <div class="flex items-center space-x-2">
        <%= link_to fields_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-900"><%= @field.name %></h1>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_field_path(@field), class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition" %>
      <%= link_to "New Visit", new_field_field_visit_path(@field), class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition" %>
    </div>
  </div>
  <!-- Field Info Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-500">Total Visits</p>
        <p class="font-medium text-gray-900"><%= @field.field_visits.count %></p>
      </div>
      <div>
        <p class="text-sm text-gray-500">Last Visit</p>
        <p class="font-medium text-gray-900"><%= @field.field_visits.recent.first&.created_at&.strftime("%B %d, %Y") || "No visits yet" %></p>
      </div>
    </div>
  </div>
  <!-- Field Visits -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Field Visits</h2>
    </div>
    <div class="divide-y divide-gray-200">
      <% if @field_visits.any? %>
        <% @field_visits.each do |visit| %>
          <%= link_to field_field_visit_path(@field, visit), class: "block px-6 py-4 hover:bg-gray-50 transition" do %>
            <div class="flex justify-between items-center">
              <div>
                <p class="font-medium text-gray-900"><%= visit.created_at.strftime("%B %d, %Y") %></p>
                <p class="text-sm text-gray-500">
                  <%= visit.audio_messages.count %> audio messages
                </p>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No field visits yet</h3>
          <p class="mt-1 text-sm text-gray-500">Start recording your first field visit.</p>
          <div class="mt-6">
            <%= link_to "Start Field Visit", new_field_field_visit_path(@field), class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Delete Field -->
  <div class="flex justify-end">
    <%= button_to "Delete Field", field_path(@field), method: :delete, 
        data: { turbo_confirm: "Are you sure you want to delete this field and all its visits?" },
        class: "text-red-600 hover:text-red-700 text-sm" %>
  </div>
</div>
